<h1>New comment</h1>

<%= error_messages_for :comment %>

<%= form_for(@comment) do |f| %>
  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <b>Byline</b><br />
    <%= f.text_field :byline %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>
