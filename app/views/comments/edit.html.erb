<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<%= form_for(@comment) do |f| %>
  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <b>Byline</b><br />
    <%= f.text_field :byline %>
  </p>

  <p>
    <b>User</b><br />
    <%= f.text_field :user %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>
