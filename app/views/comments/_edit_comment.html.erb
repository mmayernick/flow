<blockquote class="comment">
  <span class="a">&#147;</span><span class="b">&#148;</span>
  
  <% form_for [item, comment] do |f| %>
    
    <h3>Post a Comment</h3>

    <% if comment.errors.size > 0 %>
      <p class="message">Error! Your comment is too long or too short.</p>
    <% end %>

    
    <% if logged_in? %>
      <p>Posting as <strong><%= current_user.login %></strong></p>
    <% else %>
      <p><em>Registered users should <%= link_to 'log in', login_url %> to populate these fields automatically.</em></p>
      <p>
        <label for="byline" class="title">Your Name: <span class="hint">(required)</span></label><br/>
        <%= f.text_field :byline %>
      </p>
    <% end %>

    <p>
      <label for="title" class="title">Your Comment: </label>
        <span class="hint">(<a href="http://hobix.com/textile/quick.html" rel="external">Textile formatting</a>)</span><br/>
      <%= f.text_area :content, :cols => 90, :rows => 10 %>
    </p>
    
    <label for="preview" class="title">Live Preview: </label>
    <div id="preview">
      <div class="entry"><p>&nbsp;</p></div>
    </div>

    <%= render :partial => 'home/signup_captcha' unless logged_in? %>

    <p><%= f.submit "Post Comment" %></p>
  <% end %>
  
</blockquote>
